{{donation-goals-activation
  activateDonations=(action 'activateDonations' project)
  canActivateDonations=project.canActivateDonations
}}

{{#if project.donationsActive}}
  <div class="panel panel--highlighted">
    <div class="panel__section">
      <div class="panel__section__description">
        <h3>Current goal</h3>
        <p>Your current fundraising goal.</p>
      </div>

      <section class="panel__section__content">
        {{donations/donation-progress
          amountDonated=project.totalMonthlyDonated
          donationGoal=project.currentDonationGoal
        }}
      </section>
    </div>
  </div>
{{/if}}

<div class="panel">
  <div class="panel__section">
    <div class="panel__section__description">
      <h3>Your goals</h3>
      <p>Set funding goals for project milestones.</p>
    </div>

    <section class="panel__section__content">
      {{donation-goals
        add=(action 'addDonationGoal')
        cancel=(action 'cancelDonationGoal')
        edit=(action 'editDonationGoal')
        project=project
        save=(action 'saveDonationGoal')
      }}
      {{#if error}}
        {{error-formatter error=error}}
      {{/if}}
    </section>
  </div>
</div>
