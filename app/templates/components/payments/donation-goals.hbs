<div class="panel__section">
  <div class="panel__section__description">
    <h3>Enable donations</h3>
    <p>Start accepting donations.</p>
  </div>

  {{#if (eq status 'required')}}
    <section class="panel__section__content">
      <div>
        <label>Donations</label>
        <p>Go set your donation goals and start accepting donations now.</p>
        {{link-to 'Set up donations' 'project.settings.donations.goals' project class='button default activate-donations'}}
      </div>
    </section>
  {{/if}}
</div>
